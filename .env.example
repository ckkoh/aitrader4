# AI Trader 4 - Environment Variables Configuration
# Copy this file to .env and fill in your credentials
# NEVER commit .env to git (it contains sensitive credentials)

# ============================================================================
# OANDA API CONFIGURATION (REQUIRED)
# ============================================================================

# Get these from: https://www.oanda.com/account/tpa/personal_token
# Use PRACTICE account for paper trading!

OANDA_ACCOUNT_ID=001-001-1234567-001
OANDA_API_TOKEN=your_oanda_api_token_here
OANDA_ENVIRONMENT=practice  # Use 'practice' for paper trading, 'live' for real money

# ============================================================================
# STRATEGY CONFIGURATION
# ============================================================================

# Strategy to use (BalancedAdaptive recommended)
STRATEGY_NAME=BalancedAdaptive

# Confidence threshold for ML predictions (0.5-0.7)
# Higher = fewer but more confident trades
BASE_CONFIDENCE_THRESHOLD=0.50

# Enable regime-adaptive behavior (true/false)
ENABLE_REGIME_ADAPTATION=true

# ============================================================================
# RISK MANAGEMENT PARAMETERS
# ============================================================================

# Initial capital in USD (practice account)
INITIAL_CAPITAL=10000.0

# Risk per trade as % of capital (0.02 = 2%)
POSITION_SIZE_PCT=0.02

# Max notional position value as % of capital (0.02 = 2%)
# CRITICAL: For S&P 500 at ~$6000, keep this at 2% or lower!
MAX_POSITION_VALUE_PCT=0.02

# Max daily loss as % of capital (0.03 = 3%)
MAX_DAILY_LOSS_PCT=0.03

# Max drawdown as % of capital (0.15 = 15%)
MAX_DRAWDOWN_PCT=0.15

# ============================================================================
# LOGGING & MONITORING
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Dashboard port (default: 8501)
DASHBOARD_PORT=8501

# ============================================================================
# ADVANCED SETTINGS (Optional)
# ============================================================================

# Trading instrument (default: SPX500_USD for S&P 500)
# INSTRUMENT=SPX500_USD

# Data fetch granularity (D = daily, H1 = hourly, M15 = 15-min)
# GRANULARITY=D

# Maximum number of concurrent positions
# MAX_POSITIONS=1

# Model path (if using pre-trained model)
# MODEL_PATH=balanced_model_results/model_split_9_balanced.pkl
